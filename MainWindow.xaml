<Window x:Class="CourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork"
        mc:Ignorable="d"
        Title="Log In" Height="650" Width="450" WindowStartupLocation="CenterScreen"
        Background="#252422"
        FontFamily="/CourseWork;component/Fonts/#Montserrat Alternates">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="221*">

            </RowDefinition>
            <RowDefinition Height="163*">

            </RowDefinition>
            <RowDefinition Height="106*">

            </RowDefinition>
            <RowDefinition Height="129*">

            </RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Foreground="#fffcf2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="32" Margin="20,52,0,115" FontFamily="/CourseWork;component/Fonts/#Playfair Display" Height="54" Width="272">С возвращением,</Label>
        <Label Grid.Row="0" Foreground="#ccc5b9" HorizontalAlignment="Left" FontSize="16" Margin="20,110,0,1" FontFamily="/CourseWork;component/Fonts/#Playfair Display" Width="272">Войдите, чтобы продолжить!</Label>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="30" Text="" VerticalAlignment="Top" Width="350" TextChanged="TextBox_TextChanged" Grid.Row="1" Margin="40,20,0,0" Foreground="#fffcf2" Background="#252422" BorderBrush="#eb5e28" BorderThickness="0 0 0 3" FontSize="20"/>
        <PasswordBox x:Name="passBox" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30" Width="350" Password="samplepass" Margin="40,0,0,20" Foreground="#fffcf2" Background="#252422" BorderBrush="#eb5e28" BorderThickness="0 0 0 3" FontSize="14"/>
        <Button x:Name="signInBtn" Style="{DynamicResource RoundedButton}" Grid.Row="2" Width="230" Height="40" FontSize="27">Войти</Button>
    </Grid>
</Window>
