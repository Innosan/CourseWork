<Window
    x:Class="CourseWork.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CourseWork"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Log In"
    Width="450"
    Height="650"
    Background="#2f3640"
    FontFamily="/CourseWork;component/Fonts/#Montserrat Alternates"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="221*" />
            <RowDefinition Height="163*" />
            <RowDefinition Height="106*" />
            <RowDefinition Height="129*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Width="272"
            Height="54"
            Margin="20,52,0,115"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="/CourseWork;component/Fonts/#Playfair Display"
            FontSize="32"
            Foreground="#fffcf2">
            С возвращением,
        </Label>
        <Label
            Grid.Row="0"
            Width="233"
            Margin="20,110,0,80"
            HorizontalAlignment="Left"
            FontFamily="/CourseWork;component/Fonts/#Playfair Display"
            FontSize="16"
            Foreground="#ccc5b9">
            Войдите, чтобы продолжить!
        </Label>
        <TextBox
            x:Name="loginBox"
            Grid.Row="1"
            Width="370"
            Height="30"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#2f3640"
            BorderBrush="#e1b12c"
            BorderThickness="0,0,0,3"
            FontSize="20"
            Foreground="#fffcf2"
            Text=""
            TextChanged="TextBox_TextChanged" />
        <PasswordBox
            x:Name="passBox"
            Grid.Row="1"
            Width="370"
            Height="30"
            Margin="0,117,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#2f3640"
            BorderBrush="#e1b12c"
            BorderThickness="0,0,0,3"
            FontSize="14"
            Foreground="#fffcf2"
            Password="samplepass" />
        <Button
            x:Name="logInBtn"
            Grid.Row="2"
            Width="340"
            Height="55"
            Background="#e1b12c"
            FontSize="27"
            Foreground="#fffcf2"
            Style="{DynamicResource RoundedButton}">
            Войти
        </Button>
        <Label
            Grid.Row="3"
            HorizontalAlignment="Center"
            FontSize="18"
            Foreground="White">
            Еще нет аккаунта?
        </Label>
        <TextBlock
            Grid.Row="3"
            Margin="35"
            HorizontalAlignment="Center"
            FontSize="18"
            Foreground="White">
            Так<Hyperlink Foreground="#e1b12c" TextDecorations="None">
                создайте!
            </Hyperlink>
        </TextBlock>

    </Grid>
</Window>
